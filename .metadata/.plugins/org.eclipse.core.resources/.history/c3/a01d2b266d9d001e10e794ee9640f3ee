package com.cc.service;

import java.time.LocalDate;
import java.util.List;

import com.cc.Exception.TransactionalException;
import com.cc.entity.Transaction;

public interface TransactionService {

	Transaction addTransaction( Transaction transactions) throws TransactionalException;
	
	Transaction getTransaction(Integer transactionId) throws TransactionalException;
	
	Transaction deleteTransaction(Integer transactionId) throws TransactionalException;
	
	Transaction updateTransaction(Integer transactionId, Transaction transactions) throws TransactionalException;
	
	List<Transaction> getAllTransactionsByUserId(Integer userId) throws TransactionalException;
	
	List<Transaction> getAllTransactionsByDateAndUserId(Integer userId,LocalDate date) throws TransactionalException;
	
	List<Transaction> getAllTransactionByFromDateToDate(Integer userId,LocalDate fromDate,LocalDate toDate) throws TransactionalException;
	
	

}
